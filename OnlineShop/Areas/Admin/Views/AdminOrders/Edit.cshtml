@model OnlineShop.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xác nhận đơn hàng</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Người đặt
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt>
            Người đặt
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Receiver)
        </dd>
        <dt>
            Địa chỉ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            SĐT
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt>
            Tình trạng thanh toán
        </dt>
        @if (Model.IsPay == 0)
        {
            <dd>Chưa thanh toán</dd>
        }
        @if(Model.IsPay == 1)
        {
            <dd>Đã thanh toán</dd>
        }
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Ngày đặt
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            Khả dụng
        </dt>
        @if(Model.IsDeleted == 0)
        {
            <dd>Khả dụng</dd>
        }
        @if(Model.IsDeleted == 1)
        {
            <dd>Không khả dụng</dd>
        }
        <dt>
            Tình trạng đơn hàng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status.StatusName)
        </dd>
    </dl>
    
    <form asp-action="Edit">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Xác nhận" class="btn btn-success" /> |
        <a asp-action="Index">Trở về danh sách</a>
    </form>
</div>


