            <div class="single-product-area section-space-top-100">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="">
                                <img class="img-full" src="~/assets/images/product/large-size/2-2-555x645.jpg" alt="Product Image">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="product-thumb-with-content row">
                                <div class="col-12 order-lg-1 order-2 pt-10 pt-lg-0">
                                    <div class="single-product-content">
                                        <h2 class="title">Black Pepper Grains</h2>
                                        <div class="price-box pb-1">
                                            <span class="new-price text-danger">$@Model.PromotionalPrice</span>
                                        <span class="old-price text-primary">$@Model.Price</span>
                                        </div>
                                        <div class="rating-box-wrap pb-7">
                                            <div class="rating-box">
                                                <ul>
                                                @{
                                                    var i = Model.Rating;
                                                    @while (i > 0)
                                                    {
                                                        <li><i class="pe-7s-star"></i></li>
                                                        i--;
                                                    }
                                                }
                                                </ul>
                                            </div>
                                            <div class="review-status ps-4">
                                                <a href="javascript:void(0)">( 1 Customer Review )</a>
                                            </div>
                                        </div>
                                        <p class="short-desc mb-6">
                                            @Model.Decription
                                        </p>
                                        <ul class="quantity-with-btn pb-7">
                                            <li class="quantity">
                                                <div class="cart-plus-minus">
                                                    <input class="cart-plus-minus-box" value="1" type="text">
                                                </div>
                                            </li>
                                            <li class="add-to-cart">
                                                <a class="btn btn-custom-size lg-size btn-primary btn-secondary-hover rounded-0" href="cart.html">Thêm vào giỏ hàng</a>
                                            </li>
                                            <li class="wishlist-btn-wrap">
                                                <a class="btn rounded-0" href="wishlist.html">
                                                    <i class="pe-7s-like"></i>
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="product-category text-matterhorn pb-2">
                                            <span class="title">Danh mục :</span>
                                            <ul>
                                            <li>
                                                <a href="javascript:void(0)">@Model.Category.CategoryName</a>
                                            </li>
                                            </ul>
                                        </div>
                   
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
