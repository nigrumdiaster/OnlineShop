@model OnlineShop.Models.User
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
   
        <main class="main-content" style="padding-bottom:300px;">
            <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1920x373.jpg">
                <div class="container h-100">
                    <div class="row h-100" style="padding-left:400px;">
                        <div class="col-lg-6">
                            <br />
                            <form asp-action="SignIn">
                                <div class="login-form">
                                    <h4 class="login-title">Đăng nhập</h4>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <label>Email</label>
                                            <input asp-for="Email" type="email" placeholder="Nhập email">
                                        </div>
                                        <div class="col-lg-12">
                                            <label>Mật khẩu</label>
                                            <input asp-for="Password" type="password" placeholder="Nhập mật khẩu">
                                        </div>
                                        <div class="col-md-8 pt-2 mt-md-0">
                                            <div class="forgotton-password_info">
                                                <a href="#">Quên mật khẩu?</a>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 pt-5" style="padding-left: 80px;">
                                            <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">Đăng nhập</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <br />
                            @if(ViewBag.mess != null)
                            {
                                <div class="alert alert-danger" role="alert" style="font-size:13px; text-align: center; vertical-align: middle;">
                                    @ViewBag.mess
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </main>

